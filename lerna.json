{
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "command": {
    "create": {
      "author": "Stefan Natter (https://natterstefan.me)",
      "license": "Apache-2.0"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ],
  "useWorkspaces": true,
  "version": "1.0.0"
}
